<script>
    //функция получения статистика
    function getStat() {
        var year = $("#year").val();
        var project = $("#project").val();
        if (year > 0 /*&& project > 0*/) {
            $.post("/ajax/getStat.php",{year:year, project:project}, function(data){
                $("#statisticBlock").html(data); 
            })
        }
    }           


    //установка/снятие флага оплаты у тикетов проекта(клиента) client за месяц month года year. status: 1 - оплатить, 0 - отменить оплату
    //ticketID - номер тикета. если 0 - то все тикеты месяца и года
    function payTickets(ticketID,month,year,client,status) {

        $.post("/ajax/payTickets.php", {
            ticket:ticketID,
            month:month,
            year:year,
            client:client,
            status:status
            }, function(data){
                //  alert(data);
                //перегружаем статистику
                getStat();    
        });
    }

    $(function(){
        getStat();
    })

</script>

