<script>
    //функция получения статистика
    function getUserStat() {
        var year = $("#year").val();
        var user = $("#user").val();
        if (year > 0 /*&& project > 0*/) {
            $.post("/ajax/getUserStat.php",{year:year, user:user}, function(data){
                $("#statisticBlock").html(data); 
            })
        }
    }    
    
    $(function(){
        getUserStat();
    })

</script>



